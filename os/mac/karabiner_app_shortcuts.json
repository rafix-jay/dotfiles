{
  "title": "App Shortcuts (Replaces AeroSpace)",
  "rules": [
    {
      "description": "App Shortcuts - Launch Applications with Cmd+Alt combinations",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "t",
            "modifiers": {
              "mandatory": ["left_command", "left_option"]
            }
          },
          "to": [
            {
              "shell_command": "open -a 'Warp'"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "b",
            "modifiers": {
              "mandatory": ["left_command", "left_option"]
            }
          },
          "to": [
            {
              "shell_command": "open -a 'Brave Browser'"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "c",
            "modifiers": {
              "mandatory": ["left_command", "left_option"]
            }
          },
          "to": [
            {
              "shell_command": "open -a 'Visual Studio Code'"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "f",
            "modifiers": {
              "mandatory": ["left_command", "left_option"]
            }
          },
          "to": [
            {
              "shell_command": "open -a 'Finder'"
            }
          ]
        },
        {
          "type": "basic",

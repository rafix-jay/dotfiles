            }
          },
          "to": [
            {
              "shell_command": "open -a 'Messages'"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "d",
            "modifiers": {
              "mandatory": ["left_command", "left_option"]
            }
          },
          "to": [
